{% block main %}

{% if cartProducts == [] %}

<h3>Panier vide</h3>

{% else %}
    
    {% for cart in cartProducts %}
        
        <h3>{{ cart.product.name }}</h3>
        <h3>{{ cart.product.price }} â‚¬</h3>
        <h4>{{ cart.quantity }}</h4>
